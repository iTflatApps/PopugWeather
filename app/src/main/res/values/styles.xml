<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_accent</item>
        <item name="android:navigationBarColor">@color/background_accent</item>
        <item name="android:statusBarColor">@color/appAccent</item>
    </style>
    <style name="ProgressTheme">
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">@color/appAccent</item>
        <item name="android:secondaryProgressTint">@android:color/white</item>
    </style>

</resources>